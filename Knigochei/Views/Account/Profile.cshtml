
@{
    ViewData["Title"] = "Профиль";
}

@model Knigochei.Models.User

<div class="container-fluid row pt-5 pb-5" style="height: 700px;">
	<div class="col-md-3"> </div>
	<div id="Edit" class="sign col-md-6 text-center p-0 m-0 mt-5" style="height:420px">
		<div class="row ps-0 ms-0">
			<div class="col-md-1" style="background-color: #740808; height: 420px;"></div>
			<div class="pt-5 col-md-11">
				<form asp-controller="Account" asp-action="EditProfile" method="post">
					<h3>Личная информация</h3>
					<hr class="mb-2" style="width: 85%; margin-left: auto; margin-right: auto;">
					<label for="email">Почта:</label>
					@Html.TextBoxFor(m => m.Email, new { @placeholder="John@gmail.com", @name="email" })
					<br />

					<label for="firstName">Имя:</label>
					@Html.TextBoxFor(m => m.FirstName, new { @placeholder="Джон", @name="firstName" })
					<br />

					<label for="lastName">Фамилия:</label>
					@Html.TextBoxFor(m => m.LastName, new { @placeholder="Джон", @name="lastName" })
					<br />
					
					<label for="password">Пароль:</label>
					@Html.TextBoxFor(m => m.UserPassword, new { @placeholder="Пароль", @name="password", @type="password" }) 
					
					<br><br>
					<input type="submit" value="Редактировать" class="ps-2 pe-2">
				</form>
				<form method="get">
					<button class="mt-3" asp-controller="Order" asp-action="OrderHistory"> История заказов </button> <br> <br>
					<button class="mt-3 mb-2" asp-controller="Account" asp-action="Logout"> Выйти из аккаунта </button>
				</form>
			</div>
		</div>
	</div>
	<div class="col-md-3"></div>
	<br> <br> <br> <br>
</div>


