@model IEnumerable<Author>;


<div class="container-fluid">
	<div class="row text-center">
		<div class="col-md-2 pt-3 pb-3">
		</div>
		<div class="col-md-8 mt-4 ">
			<h2> Here is the selection of all of the authors available:</h2>
			<div class="row ms-5 mt-5"> 
				@foreach(var author in Model) 
				{
					<div class="card mb-3 pt-3 me-2" style="width: 18rem;">
						<img src=@Url.Content(author.AvatarImagePath) style="width: 50%" class="card-img-top" alt="...">
						<div class="card-body">
							<h4>@author.FullName</h4> 
							<hr>
							<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
						</div>
					</div>
				}
				
			</div>
			
		</div>
	</div>
</div>

