@model Knigochei.Forms.AuthorFilterFormModel

<div class="container-fluid" style="background-color: white;">
	<div class="row text-center">
		<div class="col-md-2 pt-3 pb-3" id="params">
			@using(Html.BeginForm("Index", "Author", FormMethod.Get))
			{
			<div class="row"> 
				<label class="mt-2 mr-2"> Искать по фамилии:</label> <br>
				<input type="text" asp-for="LastName" class="mt-2" placeholder="Фамилия">
			</div> <br>
			<div class="row"> 
				<label class="mt-2 mr-2"> Искать по имени:</label> <br>
				<input type="text" asp-for="FirstName" class="mt-2" placeholder="Имя"> 
			</div><br>
			<div class="row"> 
				<label class="col-md-4 mt-2 "> Жанр: </label>
				<select asp-for="GenreId" class="inp mt-2">
					<option value=0>Все</option>
					@foreach(var genre in ViewData["genres"] as List<Genre>)
					{
						<option value=@genre.Id>@genre.GenreName</option>
					}
				</select>
			</div> 
			<br>
				<div class="row"> 
					<label class="col-md-9 mt-2 ms-1">По&nbsp;убыванию:</label> 
					<input type="checkbox" asp-for="OrderByFirstNameDesc" id="check" class="col-md-2 mt-2"> 
				</div> <br>
					<input type="submit" name="settings" value="Применить">
			}
		</div>

		<div class="col-md-8 mt-4 ps-5 ms-5">
			<h2> Представляем Вашему вниманию авторов, чьи книги есть в нашей коллекции:</h2>
			<div class="row ms-5 mt-5"> 
				
				@foreach(var author in ViewData["authors"] as List<Author>) 
				{
					<div class="card mb-3 pt-3 me-2" style="width: 18rem;">
						<img src=@Url.Content(author.AvatarImagePath) style="width: 50%" class="card-img-top" alt="...">
						<div class="card-body">
							<h4>@author.FullName</h4> 
							<hr>
							<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
						</div>
					</div>
				}
				
			</div>	
		</div>
	</div>
</div>
